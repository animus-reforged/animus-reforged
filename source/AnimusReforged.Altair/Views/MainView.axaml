<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:FluentAvalonia.UI.Controls"
             xmlns:ic="using:FluentIcons.Avalonia.Fluent"
             xmlns:vm="using:AnimusReforged.Altair.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AnimusReforged.Altair.Views.MainView">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <controls:NavigationView x:Name="NavView"
                             Background="Black"
                             AlwaysShowHeader="False"
                             IsBackButtonVisible="False"
                             IsSettingsVisible="False"
                             PaneDisplayMode="Left"
                             OpenPaneLength="130"
                             IsPaneToggleButtonVisible="True"
                             ItemInvoked="NavView_OnItemInvoked">
        <!-- Navigation Items -->
        <controls:NavigationView.MenuItems>
            <controls:NavigationViewItem Content="Play" Tag="Play">
                <controls:NavigationViewItem.IconSource>
                    <ic:SymbolIconSource Symbol="Play" />
                </controls:NavigationViewItem.IconSource>
            </controls:NavigationViewItem>

            <controls:NavigationViewItem Content="Settings" Tag="Settings">
                <controls:NavigationViewItem.IconSource>
                    <ic:SymbolIconSource Symbol="Settings" />
                </controls:NavigationViewItem.IconSource>
            </controls:NavigationViewItem>

            <controls:NavigationViewItem Content="Manage" Tag="Manage">
                <controls:NavigationViewItem.IconSource>
                    <ic:SymbolIconSource Symbol="Apps" />
                </controls:NavigationViewItem.IconSource>
            </controls:NavigationViewItem>
        </controls:NavigationView.MenuItems>

        <controls:NavigationView.FooterMenuItems>
            <controls:NavigationViewItem Content="Credits" Tag="Credits">
                <controls:NavigationViewItem.IconSource>
                    <ic:SymbolIconSource Symbol="ContactCard" />
                </controls:NavigationViewItem.IconSource>
            </controls:NavigationViewItem>
            <controls:NavigationViewItem Content="Donate" Tag="Donate" SelectsOnInvoked="False">
                <controls:NavigationViewItem.IconSource>
                    <ic:SymbolIconSource Symbol="Heart" />
                </controls:NavigationViewItem.IconSource>
            </controls:NavigationViewItem>
        </controls:NavigationView.FooterMenuItems>

        <controls:Frame x:Name="ContentFrame" CacheSize="0" />
    </controls:NavigationView>
</UserControl>