<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AnimusReforged.Altair.ViewModels.Pages"
             xmlns:ic="using:FluentIcons.Avalonia.Fluent"
             mc:Ignorable="d"
             x:Class="AnimusReforged.Altair.Views.Pages.SettingsPage"
             x:DataType="vm:SettingsPageViewModel">

    <ScrollViewer>
        <StackPanel Spacing="16" Margin="24">
            <!-- uMod -->
            <Expander>
                <Expander.Header>
                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,12"
                          MinHeight="44">
                        <ic:SymbolIcon Symbol="WindowWrench" Margin="0,0,12,0" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource SettingsPage.uMod.Title}" FontWeight="SemiBold" />
                            <TextBlock Text="{DynamicResource SettingsPage.uMod.Description}"
                                       FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                        <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsuModEnabled, Mode=TwoWay}" />
                    </Grid>
                </Expander.Header>

                <StackPanel Spacing="8">
                    <!-- Enabled Mods -->
                    <Expander IsEnabled="{Binding IsuModEnabled}">
                        <Expander.Header>
                            <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,12">
                                <ic:SymbolIcon Symbol="CheckmarkCircle" Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.EnabledMods.Title}" FontWeight="SemiBold" />
                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.EnabledMods.Description}"
                                               FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <Button Grid.Column="2" Command="{Binding AddModCommand}"
                                        CommandParameter="{Binding}">
                                    <ic:SymbolIcon Symbol="AddCircle" FontSize="16" />
                                    <ToolTip.Tip>
                                        <TextBlock Text="{DynamicResource SettingsPage.uMod.AddMod.Tooltip}" />
                                    </ToolTip.Tip>
                                </Button>
                            </Grid>
                        </Expander.Header>

                        <ListBox BorderThickness="0"
                                 SelectionMode="Single"
                                 ItemsSource="{Binding EnabledMods}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto" Margin="4">
                                        <TextBlock Text="{Binding Name}"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"
                                                   Background="Transparent">
                                            <ToolTip.Tip>
                                                <TextBlock Text="{Binding FullPath}" />
                                            </ToolTip.Tip>
                                        </TextBlock>
                                        <StackPanel Orientation="Horizontal" Spacing="6" Grid.Column="1">
                                            <Button Command="{Binding $parent[UserControl].((vm:SettingsPageViewModel)DataContext).MoveModUpCommand}"
                                                    CommandParameter="{Binding}">
                                                <ic:SymbolIcon Symbol="ArrowUp" FontSize="16" />
                                                <ToolTip.Tip>
                                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.MoveUp.Tooltip}" />
                                                </ToolTip.Tip>
                                            </Button>
                                            <Button Command="{Binding $parent[UserControl].((vm:SettingsPageViewModel)DataContext).MoveModDownCommand}"
                                                    CommandParameter="{Binding}">
                                                <ic:SymbolIcon Symbol="ArrowDown" FontSize="16" />
                                                <ToolTip.Tip>
                                                    <TextBlock Text="{DynamicResource SettingsPage.uModMoveDown.Tooltip}" />
                                                </ToolTip.Tip>
                                            </Button>
                                            <Button Command="{Binding $parent[UserControl].((vm:SettingsPageViewModel)DataContext).DisableModCommand}"
                                                    CommandParameter="{Binding}">
                                                <ic:SymbolIcon Symbol="Dismiss" FontSize="16" />
                                                <ToolTip.Tip>
                                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.DisableMod.Tooltip}" />
                                                </ToolTip.Tip>
                                            </Button>
                                            <Button Command="{Binding $parent[UserControl].((vm:SettingsPageViewModel)DataContext).RemoveModCommand}"
                                                    CommandParameter="{Binding}">
                                                <ic:SymbolIcon Symbol="Delete" FontSize="16" />
                                                <ToolTip.Tip>
                                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.DeleteMod.Tooltip}" />
                                                </ToolTip.Tip>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>

                    <!-- Disabled Mods-->
                    <Expander IsEnabled="{Binding IsuModEnabled}">
                        <Expander.Header>
                            <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,12">
                                <ic:SymbolIcon Symbol="DismissCircle" Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.DisabledMods.Title}" FontWeight="SemiBold" />
                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.DisabledMods.Description}"
                                               FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                            </Grid>
                        </Expander.Header>

                        <ListBox BorderThickness="0"
                                 SelectionMode="Single"
                                 ItemsSource="{Binding DisabledMods}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto" Margin="4">
                                        <TextBlock Text="{Binding Name}"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"
                                                   Background="Transparent">
                                            <ToolTip.Tip>
                                                <TextBlock Text="{Binding FullPath}" />
                                            </ToolTip.Tip>
                                        </TextBlock>
                                        <StackPanel Orientation="Horizontal" Spacing="6" Grid.Column="1">
                                            <Button Command="{Binding $parent[UserControl].((vm:SettingsPageViewModel)DataContext).EnableModCommand}"
                                                    CommandParameter="{Binding}">
                                                <ic:SymbolIcon Symbol="Checkmark" FontSize="16" />
                                                <ToolTip.Tip>
                                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.EnableMod.Tooltip}" />
                                                </ToolTip.Tip>
                                            </Button>
                                            <Button Command="{Binding $parent[UserControl].((vm:SettingsPageViewModel)DataContext).RemoveModCommand}"
                                                    CommandParameter="{Binding}">
                                                <ic:SymbolIcon Symbol="Delete" FontSize="16" />
                                                <ToolTip.Tip>
                                                    <TextBlock Text="{DynamicResource SettingsPage.uMod.DeleteMod.Tooltip}" />
                                                </ToolTip.Tip>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>
                </StackPanel>
            </Expander>

            <!-- ReShade -->
            <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="4"
                    MinHeight="44"
                    Padding="12">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <ic:SymbolIcon Symbol="CameraEdit" Margin="0,0,12,0" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{DynamicResource SettingsPage.ReShade.Title}" FontWeight="SemiBold" />
                        <TextBlock Text="{DynamicResource SettingsPage.ReShade.Description}"
                                   FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                    <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsReShadeEnabled, Mode=TwoWay}" />
                </Grid>
            </Border>

            <!-- AltairFix -->
            <Expander>
                <Expander.Header>
                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,12"
                          MinHeight="44">
                        <ic:SymbolIcon Symbol="Patch" Margin="0,0,12,0" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource SettingsPage.AltairFix.Title}" FontWeight="SemiBold" />
                            <TextBlock Text="{DynamicResource SettingsPage.AltairFix.Description}"
                                       FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                        <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsAltairFixEnabled, Mode=TwoWay}" />
                    </Grid>
                </Expander.Header>

                <StackPanel Spacing="8">
                    <!-- StutterFix -->
                    <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12"
                            MinHeight="44"
                            IsEnabled="{Binding IsAltairFixEnabled}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ic:SymbolIcon Symbol="Bug" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource SettingsPage.AltairFix.StutterFix.Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{DynamicResource SettingsPage.AltairFix.StutterFix.Description}"
                                           FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsStutterFixEnabled, Mode=TwoWay}" />
                        </Grid>
                    </Border>

                    <!-- HighCoreCount Fix -->
                    <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12"
                            MinHeight="44"
                            IsEnabled="{Binding IsAltairFixEnabled}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ic:SymbolIcon Symbol="Settings" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource SettingsPage.AltairFix.HighCoreCountFix.Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{DynamicResource SettingsPage.AltairFix.HighCoreCountFix.Description}"
                                           FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsHighCoreCountFixEnabled, Mode=TwoWay}" />
                        </Grid>
                    </Border>

                    <!-- Window Mode -->
                    <Expander IsEnabled="{Binding IsAltairFixEnabled}" IsExpanded="True">
                        <Expander.Header>
                            <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,12"
                                  MinHeight="44">
                                <ic:SymbolIcon Symbol="Window" Margin="0,0,12,0" />
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{DynamicResource SettingsPage.AltairFix.WindowMode.Title}" FontWeight="SemiBold" />
                                    <TextBlock Text="{DynamicResource SettingsPage.AltairFix.WindowMode.Description}"
                                               FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                                <ComboBox Grid.Column="2"
                                          ItemsSource="{Binding WindowModes}"
                                          SelectedIndex="{Binding SelectedWindowModeIndex}"
                                          MinWidth="100" />
                            </Grid>
                        </Expander.Header>

                        <StackPanel Spacing="8" Margin="36,8,0,0">
                            <!-- Window Width -->
                            <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Padding="12"
                                    MinHeight="44"
                                    IsEnabled="{Binding IsCustomResolutionMode}">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <ic:SymbolIcon Symbol="ArrowAutofitWidth" Margin="0,0,12,0" />
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{DynamicResource SettingsPage.AltairFix.WindowedMode.WindowWidth.Title}" FontWeight="SemiBold" />
                                        <TextBlock Text="{DynamicResource SettingsPage.AltairFix.WindowedMode.WindowWidth.Description}"
                                                   FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <ComboBox Grid.Column="2"
                                              ItemsSource="{Binding SupportedWidths}"
                                              SelectedValue="{Binding SelectedWidth}"
                                              MinWidth="100" />
                                </Grid>
                            </Border>

                            <!-- Window Height -->
                            <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    MinHeight="44"
                                    Padding="12"
                                    IsEnabled="{Binding IsCustomResolutionMode}">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <ic:SymbolIcon Symbol="ArrowAutofitHeight" Margin="0,0,12,0" />
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{DynamicResource SettingsPage.AltairFix.WindowedMode.WindowHeight.Title}" FontWeight="SemiBold" />
                                        <TextBlock Text="{DynamicResource SettingsPage.AltairFix.WindowedMode.WindowHeight.Description}"
                                                   FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <ComboBox Grid.Column="2"
                                              ItemsSource="{Binding SupportedHeights}"
                                              SelectedValue="{Binding SelectedHeight}"
                                              MinWidth="100" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Expander>

            <!-- EaglePatch -->
            <Expander>
                <Expander.Header>
                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,12"
                          MinHeight="44">
                        <ic:SymbolIcon Symbol="WrenchScrewdriver" Margin="0,0,12,0" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource SettingsPage.EaglePatch.Title}" FontWeight="SemiBold" />
                            <TextBlock Text="{DynamicResource SettingsPage.EaglePatch.Description}"
                                       FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                        <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsEaglePatchEnabled, Mode=TwoWay}" />
                    </Grid>
                </Expander.Header>
                <StackPanel Spacing="8">
                    <!-- Keyboard Layout -->
                    <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12"
                            MinHeight="44"
                            IsEnabled="{Binding IsEaglePatchEnabled}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ic:SymbolIcon Symbol="Keyboard" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource SettingsPage.EaglePatch.KeyboardLayout.Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{DynamicResource SettingsPage.EaglePatch.KeyboardLayout.Description}"
                                           FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <ComboBox Grid.Column="2"
                                      ItemsSource="{Binding KeyboardLayouts}"
                                      SelectedIndex="{Binding SelectedKeyboardLayoutIndex}"
                                      MinWidth="150" />
                        </Grid>
                    </Border>

                    <!-- PS3 Controls -->
                    <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12"
                            MinHeight="44"
                            IsEnabled="{Binding IsEaglePatchEnabled}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ic:SymbolIcon Symbol="XboxController" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource SettingsPage.EaglePatch.PS3Controls.Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{DynamicResource SettingsPage.EaglePatch.PS3Controls.Description}"
                                           FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsPs3ControlsEnabled, Mode=TwoWay}" />
                        </Grid>
                    </Border>

                    <!-- Skip Video Intros -->
                    <Border BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12"
                            MinHeight="44"
                            IsEnabled="{Binding IsEaglePatchEnabled}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ic:SymbolIcon Symbol="XboxController" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource SettingsPage.EaglePatch.SkipIntroVideos.Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{DynamicResource SettingsPage.EaglePatch.SkipIntroVideos.Description}"
                                           FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <ToggleSwitch Grid.Column="2" IsChecked="{Binding IsSkipIntroVideoEnabled, Mode=TwoWay}" />
                        </Grid>
                    </Border>
                </StackPanel>
            </Expander>

            <!-- Launcher Settings -->
            <Expander>
                <Expander.Header>
                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,12"
                          MinHeight="44">
                        <ic:SymbolIcon Symbol="Settings" Margin="0,0,12,0" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource SettingsPage.Launcher.Title}" FontWeight="SemiBold" />
                            <TextBlock Text="{DynamicResource SettingsPage.Launcher.Description}"
                                       FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Expander.Header>
                <StackPanel Spacing="8">
                    <!-- Language -->
                    <Border MinHeight="44" BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ic:SymbolIcon Symbol="LocalLanguage" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource SettingsPage.Launcher.Language.Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{DynamicResource SettingsPage.Launcher.Language.Description}"
                                           FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <ComboBox Grid.Column="2"
                                      ItemsSource="{Binding AppLanguages}"
                                      SelectedIndex="{Binding SelectedLanguageIndex, Mode=TwoWay}"
                                      MinWidth="150"
                                      VerticalAlignment="Center">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding NativeName}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Logging Level -->
                    <Border MinHeight="44" BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="12">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ic:SymbolIcon Symbol="DocumentBulletList" Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource SettingsPage.Launcher.LogLevel.Title}" FontWeight="SemiBold" />
                                <TextBlock Text="{DynamicResource SettingsPage.Launcher.LogLevel.Description}"
                                           FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <ComboBox Grid.Column="2"
                                      ItemsSource="{Binding LogLevelOptions.Keys}"
                                      SelectedItem="{Binding SelectedLogLevelKey, Mode=TwoWay}"
                                      MinWidth="100"
                                      VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>